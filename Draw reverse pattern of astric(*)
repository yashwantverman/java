public class practice{
    public static void main(String[] args) {
         int i,j,n=4;
         System.out.println("print the given pattern");
         for(i=n;i>=1;i--){
             for(j=1;j<=i;j++){
                 System.out.print("*");
             }
             System.out.print("\n");
            } 
         }
      }
        
